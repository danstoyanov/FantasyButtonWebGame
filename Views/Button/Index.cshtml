@model IEnumerable<FantasyButtonWebGame.Models.ButtonModel>

<style>
    .game-button {
        width: 150px;
    }
</style>

@{
    string[] imageNames = { "blueb.png", "greenb.png", "purpleb.png", "redb.png" };
}

@for (int i = 0; i < Model.Count(); i++)
{
    // start new line after every fifth button
    if (i % 5 == 0)
    {
        <br />
    }

    // show the images in current state value
    <img class="game-button" src="~/img/@imageNames[Model.ElementAt(i).ButtonState]" />
}