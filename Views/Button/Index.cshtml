@model IEnumerable<FantasyButtonWebGame.Models.ButtonModel>


<style>
    .game-button {
        width: 150px;
        text-align: center;
        border: none;
    }

    .game-button-image {
        width: 70%;
    }

    .button-zone {
        display: flex;
        flex-wrap: wrap;
    }

    .line-break {
        flex-basis: 100%;
        height: 0;
    }

    .button-label {
        font-size: 16px;
        text-align: center;
    }
</style>

@{
    string[] imageNames = { "blueb.png", "greenb.png", "purpleb.png", "redb.png" };
}

<form>
    <div class="button-zone">
        @for (int i = 0; i < Model.Count(); i++)
        {
            // start new line after every fifth button
            if (i % 5 == 0)
            {
                <div class="line-break"></div>
            }

            // show the images in current state value
            <button class="game-button" name="buttonNumber" value="@Model.ElementAt(i).Id" type="submit" asp-controller="button" asp-action="HandleButtonClick">
                <img class="game-button-image" src="~/img/@imageNames[Model.ElementAt(i).ButtonState]" />

                <div class="button-label">
                    @Model.ElementAt(i).Id, @Model.ElementAt(i).ButtonState
                </div>
            </button>
        }
    </div>
</form>



